@model IEnumerable<WebApplication28.Models.Players>

@{
    ViewData["Title"] = "Players List";
}



<p>
    <a asp-action="Create"><b class="bg-primary text-white">ADD New Player</b></a>
</p>
<div class="container">
    <table class="table table-dark table-borderless">
        <thead>
            <tr>
                <th>
                    Profile Picture
                </th>
                <th>
                    Name
                </th>
                <th>
                    Team
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        <img src="@("/Images/"+item.Img)" width="100" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tplayer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.T.Tname)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Pid">Edit</a> |

                        <a asp-action="Delete" asp-route-id="@item.Pid">Delete</a>|
                        <a asp-action="Details" asp-controller="PlayerProfiles" asp-route-id="@item.Pid"><b>View Profile</b></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>