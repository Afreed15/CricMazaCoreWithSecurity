@model IEnumerable<WebApplication28.Models.Players>

@{
    ViewData["Title"] = "Display";
}

@*<h1>Display</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>*@
<div class="container">
    <table class="table table-dark table-borderless">
        <thead>
            <tr>
                <th>
                    Profile Pic
                </th>
                <th>
                    Name
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        <img src="@("/Images/"+item.Img)" width="100" height="100" />
                    </td>
                    <td>
                        <h3><b>  @Html.DisplayFor(modelItem => item.Tplayer)</b></h3>
                    </td>

                    <td>

                        <a asp-action="Details" asp-controller="PlayerProfiles" asp-route-id="@item.Pid"><b>View Profile</b></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>