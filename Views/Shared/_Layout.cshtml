<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CricMazaServerDb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</head>
<body class="bg-light.bg-gradient">

    <header>
        <div style="position:center;top:20px;width:100%;height:200px;left:10px;right:10px;background-color:#ffde59;">
            <img src="~/Images/Cricmaza Logo.png" width="200" height="200" style="float:left" />
            <h1 style="font-family:'Times New Roman', Times, serif;font-size:xx-large;text-align:center;color:white"><b></b></h1>

            <nav class="navbar navbar-expand-lg ">

                <div class="container">




                    <ol class="navbar-brand" style="text-decoration:none">

                        <li class="navbar-brand" style="margin-left:20px">
                            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><b>CricMaza</b></a>
                            <a class="navbar-brand" style="color:#F23557" asp-area="" asp-controller="Teams" asp-action="Index"><img src="~/Images/cricket.png" width="25" height="25" /><b>Teams</b></a>
                            <a class="navbar-brand" style="color:#F23557" asp-area="" asp-controller="Players" asp-action="Index"><img src="~/Images/cricket-player-with-bat.png" width="25" height="25" /><b>Players</b></a>
                            <a class="navbar-brand" style="color:#F23557" asp-area="" asp-controller="PlayerProfiles" asp-action="Index"><img src="~/Images/group.png" width="25" height="25" /><b>PlayerProfiles</b></a>
                            <a class="navbar-brand" style="color:#F23557" asp-area="" asp-controller="PointsTables" asp-action="Display"><img src="~/Images/tableicon.webp" width="25" height="25" /><b>Points Table</b></a>
                            <a class="navbar-brand" style="color:#F23557" asp-area="" asp-controller="Matches" asp-action="Index"><img src="~/Images/Matchesicon.jpg" width="25" height="25" /><b>Matches</b></a>
                            <a class="navbar-brand" style="color:#F23557" asp-area="Identity" asp-page="/Account/Login"><img src="~/Images/login.png" width="25" height="25" /><b>Login</b></a>
                            <form class="navbar-brand" style="color:#F23557" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link text-dark"><img src="~/Images/logout.png" width="25" height="25" /><b style="color:#F23557">Logout</b></button>
                            </form>

                        </li>
                    </ol>

                </div>
            </nav>
        </div>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>